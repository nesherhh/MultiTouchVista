<mt:Window x:Class="TestApplication.Window1"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:mt="http://schemas.multitouch.com/Multitouch/2008/04"
		Title="Window1" Height="400" Width="400">
    <Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition/>
			<ColumnDefinition/>
		</Grid.ColumnDefinitions>
		<ListBox Grid.Column="0"
				 x:Name="list1"
				 ItemsSource="{Binding Contacts1}"
				 mt:MultitouchScreen.NewContact="list1_NewContact"
				 mt:MultitouchScreen.ContactMoved="list1_ContactMoved"
				 mt:MultitouchScreen.ContactRemoved="list1_ContactRemoved"
				 />
		<ListBox Grid.Column="1"
				 x:Name="list2"
				 ItemsSource="{Binding Contacts2}"
				 mt:MultitouchScreen.ContactMoved="list2_ContactMoved"
				 mt:MultitouchScreen.ContactRemoved="list2_ContactRemoved"
				 mt:MultitouchScreen.NewContact="list2_NewContact"/>
    </Grid>
</mt:Window>
